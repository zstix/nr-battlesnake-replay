{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "target": "es2018",
    "lib": ["dom", "es2016", "es2017.object"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist/",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["nerdlets/**/*", "launchers/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
